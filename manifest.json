{
	"manifest_version": 2,
	"name": "Paycom - Timesheet",
	"version": "0.1",
	"browser_action": {
		"default_title": "Paycom Login",
		"default_popup": "popup.html"
	},
	"background": {
		"scripts": ["background.js"]
	},
	
	"content_scripts": [
		{
			"matches": [
				"https://www.paycomonline.net/*"
			],
			"js": ["src/jquery-3.1.1.min.js", "src/aes.js", "src/pbkdf2.js", "src/moment.js", "timeClock.js", "login-form.js"]
		}
	],
	"permissions": [
		"activeTab",
		"storage"
	]
}